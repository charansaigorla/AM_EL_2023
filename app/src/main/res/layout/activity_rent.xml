<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rentimg"
    tools:context=".Rent">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="355dp"
        android:layout_height="521dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.378">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:hint="Owner">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/owner"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_land"
                    android:drawablePadding="12dp"
                    android:hint="Owner"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="95dp"
                android:hint="Land Address">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/add"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_land"
                    android:drawablePadding="12dp"
                    android:hint="Land Address"
                    android:inputType="text"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="101dp"
                android:hint="Rent Duration">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/rd"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_baseline_timer_24"
                    android:drawablePadding="12dp"
                    android:hint="Rent Duration"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:hint="Rent Amount">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/ra"
                    android:layout_width="match_parent"
                    android:layout_height="123dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_baseline_attach_money_24"
                    android:drawablePadding="12dp"
                    android:hint="Rent Amount"
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:hint="Phone no.">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/phn"
                    android:layout_width="match_parent"
                    android:layout_height="116dp"
                    android:background="#FFFFFF"
                    android:drawableStart="@drawable/ic_baseline_phone_24"
                    android:drawablePadding="12dp"
                    android:hint="Phone no."
                    android:paddingTop="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="18sp" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/submit"
        android:layout_width="128dp"
        android:layout_height="54dp"
        android:autoText="false"
        android:background=" #0000ffff "
        android:backgroundTint=" #0000ffff "
        android:text="SUBMIT"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cardView"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/cardView"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.328" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/flbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:backgroundTint="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.921"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963"
        android:src="@drawable/ic_baseline_add_24" />

</androidx.constraintlayout.widget.ConstraintLayout>