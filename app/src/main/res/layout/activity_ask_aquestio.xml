<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".AskAQuestion">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/question_toolbar"
        android:background="#48730A"
        android:elevation="4dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ask A Question"
        android:textColor="#48730A"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"/>

    <Spinner
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:id="@+id/spinner"
        android:backgroundTint="@color/black"
        android:layout_margin="10dp"
        android:entries="@array/topics"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ENTER YOUR QUESTION HERE.."
        android:textColorHighlight="@color/black"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:id="@+id/question_text"
        android:textColor="#48730A"
        android:textColorHint="#48730A"/>
    <ImageView
        android:id="@+id/questionimage"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_image_24"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:id="@+id/cancel"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/sigin_in_button"
           android:layout_marginLeft="30dp"
            android:gravity="center"

            android:layout_gravity="center"
            android:textColorHint="#4CBF05"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POST QUESTION"
            android:id="@+id/PostQuestion"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:background="@drawable/sigin_in_button"
            android:layout_marginLeft="35dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:textColorHint="#4CBF05"/>
    </LinearLayout>

    </LinearLayout>

